    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var store = await ProtectedSessionStore.GetAsync<string>("tokenX");
            if (store.Success)
                token = store.Value;
            else
                NavigationManager.NavigateTo("https://localhost:7289", true);

            var result = await PermissionService.PermissionsAsync(token);
            permissions = result.permissions;
            message = result.message;

            var result2 = await PermissionService.PermissionEffectiveAsync(token);
            effective = result2.permissions;

            _isError = !string.IsNullOrEmpty(message);
            _isLoading = false;
            StateHasChanged();
        }
    }

