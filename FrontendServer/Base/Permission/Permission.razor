}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Permission</th>
                <th>CRUD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var perms in effective)
            {
                <tr>
                    <td>@perms.Permission</td>
                    <td>@perms.Crud</td>
                </tr>
            }
        </tbody>
    </table>
}




